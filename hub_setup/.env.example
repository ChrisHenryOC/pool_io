# PoolIO Hub Environment Configuration
# Copy this file to .env and update the values

# InfluxDB Configuration
INFLUXDB_PASSWORD=your-secure-password-here
INFLUXDB_TOKEN=your-influxdb-token-here

# User ID and Group ID for Docker containers
USER_ID=1000
GROUP_ID=1000

# MQTT Configuration
MQTT_BROKER=mosquitto://localhost:1883

# API Configuration
NODE_ENV=production
API_PORT=3000

# Network Configuration
HUB_IP=192.168.68.120
SUBNET=192.168.68.0/24

# Optional: Cloud backup configuration
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_BUCKET=poolio-backup
# AWS_REGION=us-east-1